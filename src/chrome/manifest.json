{
  "name": "JIRA Active Tickets Helper",
  "version": "2.0.1",
  "description": "Jira Chrome Extension to help manage active tickets better.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://jira.cainc.com/*"],
      "js": ["index.bundle.js"]
    }
  ], 
  "page_action": {
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "web_accessible_resources": [
    "*"
  ],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "manifest_version": 2
}